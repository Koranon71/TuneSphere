<Window x:Class="TuneSphere.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TuneSphere" Height="850" Width="700" Background="#2e3440">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#2c2c2c"/>
            <Setter Property="Foreground" Value="#727070"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3a3a3a"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#e0e0e0"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="ListView">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border Background="#e0e0e0" BorderBrush="#444444" BorderThickness="1" CornerRadius="3">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Image Source="{Binding CoverImage}" Width="60" Height="60" Margin="5"/>
                                <StackPanel Grid.Column="1" Orientation="Vertical">
                                    <TextBlock Text="{Binding Title}" FontWeight="Bold" Margin="5,0"/>
                                    <TextBlock Text="{Binding Author}" Margin="5,0"/>
                                    <TextBlock Text="{Binding AudioLength}" Margin="5,0"/>
                                </StackPanel>
                                <Button Grid.Column="2" Height ="50" Width="60" Content="Играть" Tag="{Binding AudioFile}" Click="PlayTrackButton_Click" Margin="5,0"/>
                                <Button Grid.Column="3" Height ="50" Width="60" Content="Удалить" Tag="{Binding Id}" Click="DeleteTrackButton_Click" Margin="5,0"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3a3a3a"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Название:" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox Name="TitleTextBox" Width="300"/>

            <TextBlock Text="Автор:" FontSize="16" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBox Name="AuthorTextBox" Width="300"/>

            <TextBlock Text="Обложка:" FontSize="16" FontWeight="Bold" Margin="0,10,0,5"/>
            <Button Content="Обзор..." Height="30" Name="CoverImageButton" Click="CoverImageButton_Click"/>
            <TextBlock Name="CoverImagePath" Margin="20,5,0,10"/>

            <TextBlock Text="Аудиофайл:" FontSize="16" FontWeight="Bold" Margin="0,10,0,5"/>
            <Button Content="Обзор..." Height="30" Name="AudioFileButton" Click="AudioFileButton_Click"/>
            <TextBlock Name="AudioFilePath" Margin="20,5,0,10"/>

            <Button Content="Добавить аудиофайл" Name="AddTrackButton" Click="AddTrackButton_Click" Height="40" Width="150" Margin="0,20,0,20"/>

            <ListView Name="TracksListView" Height="200"/>

            <MediaElement Name="AudioPlayer" LoadedBehavior="Manual" UnloadedBehavior="Stop" Volume="1.0" Margin="0,20,0,0"/>
            <StackPanel HorizontalAlignment="Center">
                <Slider Name="VolumeSlider" Minimum="0" Maximum="1" Value="1" TickFrequency="0.01" IsSnapToTickEnabled="False" Width="200" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,20,0,10" ValueChanged="VolumeSlider_ValueChanged"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="▶️" Height="50" Width="50" x:Name="PlayPauseButton" Click="PlayPauseButton_Click"/>
                    <Button Content="⏹️" Height="50" Width="50" Name="StopButton" Click="StopButton_Click"/>
                </StackPanel>
            </StackPanel>
            <Image Name="SelectedCoverImage" Width="200" Height="200" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
